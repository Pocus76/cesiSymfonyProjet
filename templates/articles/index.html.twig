{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form class="pull-right hidden" role="search" id="nav-search-form" method="post" action="{{ path('produit.search') }}">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search" name ="search">
            <span class="input-group-btn">
            <button type="submit" class="btn btn-default"></button>
          </span>
        </div>
    </form>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Actions</th>
        </tr></thead>
        <tbody>
        {% for produit in repository %}
            <tr>
            <td>{{ produit.Titre}}</td>
            <td>{{ produit.Description}}</td>
            <td>
                <a href="{{ path('produit.detail', {'produit': produit.Id}) }}" class="btn btn-secondary">Voir la fiche produit</a>
            </td>
            </tr>
        {% endfor%}
        </tbody>
    </table>
    {{ knp_pagination_render(repository) }}
</div>
{% endblock %}
