{% extends 'base.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}
    <h1>Stock index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Produit</th>
                <th>Magasin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.quantite }}</td>
                <td>
                    <p>{{ stock.produit.Titre }}</p>
                    <p>{{ stock.produit.Description }}</p>
                </td>
                <td>
                    <p>{{ stock.magasin.nom }}</p>
                    <p>{{ stock.magasin.ville }}</p>
                </td>
                <td>
                    <a href="{{ path('stock_show', {'id': stock.id}) }}">Voir</a>
                    <a href="{{ path('stock_edit', {'id': stock.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stock_new') }}">Create new</a>
{% endblock %}
