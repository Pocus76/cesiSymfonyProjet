{% extends 'base.html.twig' %}
{% block title 'Gérerles produits' %}
{% block body %}
    <div class="container mt-4">
    <h1>Gérerles Produits</h1>
    <a href="{{ path('admin.produit.add') }}" class="btnbtn-success ">Ajouter</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>{% for produitin produits%}
            <tr>
            <td>{{ produit.titre}}</td>
            <td>
                <a href="{{ path('admin.produit.edit', {id: produit.id}) }}" class="btnbtn-secondary">Editer</a>
            </td>
            </tr>
        {% endfor%}
        </tbody>
    </table>
    </div>
{% endblock%}